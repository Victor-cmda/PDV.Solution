<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PDV.UI.WinUI3.Views.EmployeesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PDV.UI.WinUI3.Views"
    xmlns:controls="using:PDV.UI.WinUI3.Controls"
    xmlns:converters="using:PDV.UI.WinUI3.Converters"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled">

    <Page.Resources>
        <!-- Converters -->
        <converters:RoleToColorConverter x:Key="RoleToColorConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:DateTimeToRelativeTimeConverter x:Key="DateTimeToRelativeTimeConverter"/>
        <converters:UserRoleToIconConverter x:Key="UserRoleToIconConverter"/>
        <converters:NameToInitialsConverter x:Key="NameToInitialsConverter"/>
        <converters:DateToFormattedStringConverter x:Key="DateToFormattedStringConverter"/>
        <converters:CountToTextConverter x:Key="CountToTextConverter"/>
        <converters:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter"/>
        <converters:BoolToActiveStatusConverter x:Key="BoolToActiveStatusConverter"/>

        <!-- Estilos e Templates -->
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource ControlFillColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="PrimaryActionButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{ThemeResource AccentFillColorDefaultBrush}"/>
            <Setter Property="Foreground" Value="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
        </Style>

        <Style x:Key="CardTitleStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <!-- Template para card de funcionário -->
        <DataTemplate x:Key="EmployeeCardTemplate">
            <Border Style="{StaticResource CardBorderStyle}" Margin="0,6" Padding="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Status indicator -->
                    <Border Grid.Column="0" Width="4" Background="{Binding Role, Converter={StaticResource RoleToColorConverter}}" Margin="0,0,12,0"/>

                    <!-- Employee Info -->
                    <Grid Grid.Column="1" Padding="8,16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Avatar/Iniciais -->
                            <Border Grid.Column="0" 
                                    Background="{Binding Role, Converter={StaticResource RoleToColorConverter}}" 
                                    Width="40" Height="40" 
                                    CornerRadius="20" 
                                    Margin="0,0,12,0" 
                                    VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name, Converter={StaticResource NameToInitialsConverter}}" 
                                           Foreground="White" 
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>

                            <!-- Nome e cargo -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" 
                                           Style="{StaticResource BodyStrongTextBlockStyle}" 
                                           TextTrimming="CharacterEllipsis"/>

                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <FontIcon Glyph="{Binding Role, Converter={StaticResource UserRoleToIconConverter}}" 
                                              FontSize="12" 
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                                    <TextBlock Text="{Binding Position}" 
                                               Style="{StaticResource CaptionTextBlockStyle}" 
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                                    <TextBlock Text="•" 
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                                    <TextBlock Text="{Binding Role}" 
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <!-- Info extra -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12" Margin="0,8,0,0">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE715;" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{Binding Email}" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE717;" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock Text="{Binding Phone}" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Status badges -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                            <Border Background="{ThemeResource AccentFillColorDefaultBrush}" 
                                    Opacity="0.1" 
                                    CornerRadius="12" 
                                    Padding="8,3">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <FontIcon Glyph="&#xE121;" 
                                              FontSize="10" 
                                              Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>

                                    <TextBlock Text="{Binding HireDate, Converter={StaticResource DateTimeToRelativeTimeConverter}}" 
                                               Style="{StaticResource CaptionTextBlockStyle}" 
                                               FontWeight="SemiBold"
                                               Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                </StackPanel>
                            </Border>

                            <Border Background="{ThemeResource SystemFillColorCriticalBrush}" 
                                    Opacity="0.1" 
                                    CornerRadius="12" 
                                    Padding="8,3"
                                    Visibility="{Binding IsLocked, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <FontIcon Glyph="&#xE72E;" 
                                              FontSize="10" 
                                              Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>

                                    <TextBlock Text="Bloqueado" 
                                               Style="{StaticResource CaptionTextBlockStyle}" 
                                               FontWeight="SemiBold"
                                               Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                                </StackPanel>
                            </Border>

                            <Border Background="{ThemeResource SystemFillColorCautionBrush}" 
                                    Opacity="0.1" 
                                    CornerRadius="12" 
                                    Padding="8,3"
                                    Visibility="{Binding IsActive, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <FontIcon Glyph="&#xE738;" 
                                              FontSize="10" 
                                              Foreground="{ThemeResource SystemFillColorCautionBrush}"/>

                                    <TextBlock Text="Inativo" 
                                               Style="{StaticResource CaptionTextBlockStyle}" 
                                               FontWeight="SemiBold"
                                               Foreground="{ThemeResource SystemFillColorCautionBrush}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Quick Actions -->
                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal" 
                                Spacing="4" 
                                Margin="0,0,12,0" 
                                VerticalAlignment="Center">
                        <Button x:Name="EditButton" 
                                Style="{StaticResource ActionButtonStyle}"
                                Tag="{Binding}" 
                                Click="QuickEditEmployee_Click"
                                ToolTipService.ToolTip="Editar">
                            <FontIcon Glyph="&#xE70F;" FontSize="16"/>
                        </Button>

                        <Button x:Name="DeleteButton" 
                                Style="{StaticResource ActionButtonStyle}"
                                Tag="{Binding}" 
                                Click="QuickDeleteEmployee_Click"
                                ToolTipService.ToolTip="Excluir">
                            <FontIcon Glyph="&#xE74D;" FontSize="16" Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Dados Tab Template (Funcionário) -->
        <DataTemplate x:Key="EmployeeDataTemplate">
            <ScrollViewer>
                <RelativePanel Padding="{StaticResource ResponsiveMarginLarge}">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup>
                            <VisualState x:Name="WideState">
                                <VisualState.StateTriggers>
                                    <AdaptiveTrigger MinWindowWidth="{StaticResource MediumModeThresholdWidth}"/>
                                </VisualState.StateTriggers>
                                <VisualState.Setters>
                                    <!-- Configurações para telas grandes - layout em duas colunas -->
                                    <Setter Target="PersonalInfoGrid.Width" Value="*"/>
                                    <Setter Target="ContactInfoGrid.Width" Value="*"/>
                                    <Setter Target="RoleInfoGrid.Width" Value="*"/>
                                    <Setter Target="SystemAccessGrid.Width" Value="*"/>
                                    
                                    <Setter Target="ContactInfoPanel.(RelativePanel.RightOf)" Value="PersonalInfoPanel"/>
                                    <Setter Target="ContactInfoPanel.(RelativePanel.AlignTopWith)" Value="PersonalInfoPanel"/>
                                    <Setter Target="RoleInfoPanel.(RelativePanel.Below)" Value="PersonalInfoPanel"/>
                                    <Setter Target="SystemAccessPanel.(RelativePanel.RightOf)" Value="RoleInfoPanel"/>
                                    <Setter Target="SystemAccessPanel.(RelativePanel.AlignTopWith)" Value="RoleInfoPanel"/>
                                </VisualState.Setters>
                            </VisualState>
                            
                            <VisualState x:Name="MediumState">
                                <VisualState.StateTriggers>
                                    <AdaptiveTrigger MinWindowWidth="{StaticResource CompactModeThresholdWidth}"/>
                                </VisualState.StateTriggers>
                                <VisualState.Setters>
                                    <!-- Configurações para telas médias - layout em uma coluna -->
                                    <Setter Target="PersonalInfoGrid.Width" Value="Auto"/>
                                    <Setter Target="ContactInfoGrid.Width" Value="Auto"/>
                                    <Setter Target="RoleInfoGrid.Width" Value="Auto"/>
                                    <Setter Target="SystemAccessGrid.Width" Value="Auto"/>
                                    
                                    <Setter Target="ContactInfoPanel.(RelativePanel.Below)" Value="PersonalInfoPanel"/>
                                    <Setter Target="ContactInfoPanel.(RelativePanel.AlignLeftWith)" Value="PersonalInfoPanel"/>
                                    <Setter Target="RoleInfoPanel.(RelativePanel.Below)" Value="ContactInfoPanel"/>
                                    <Setter Target="SystemAccessPanel.(RelativePanel.Below)" Value="RoleInfoPanel"/>
                                    <Setter Target="SystemAccessPanel.(RelativePanel.AlignLeftWith)" Value="RoleInfoPanel"/>
                                </VisualState.Setters>
                            </VisualState>
                            
                            <VisualState x:Name="NarrowState">
                                <VisualState.StateTriggers>
                                    <AdaptiveTrigger MinWindowWidth="0"/>
                                </VisualState.StateTriggers>
                                <VisualState.Setters>
                                    <!-- Configurações para telas pequenas - layout em uma coluna e fontes menores -->
                                    <Setter Target="PersonalInfoGrid.Width" Value="Auto"/>
                                    <Setter Target="ContactInfoGrid.Width" Value="Auto"/>
                                    <Setter Target="RoleInfoGrid.Width" Value="Auto"/>
                                    <Setter Target="SystemAccessGrid.Width" Value="Auto"/>
                                    
                                    <Setter Target="ContactInfoPanel.(RelativePanel.Below)" Value="PersonalInfoPanel"/>
                                    <Setter Target="ContactInfoPanel.(RelativePanel.AlignLeftWith)" Value="PersonalInfoPanel"/>
                                    <Setter Target="RoleInfoPanel.(RelativePanel.Below)" Value="ContactInfoPanel"/>
                                    <Setter Target="SystemAccessPanel.(RelativePanel.Below)" Value="RoleInfoPanel"/>
                                    <Setter Target="SystemAccessPanel.(RelativePanel.AlignLeftWith)" Value="RoleInfoPanel"/>
                                    
                                    <Setter Target="PersonalInfoTitle.FontSize" Value="{StaticResource ResponsiveFontSizeMedium}"/>
                                    <Setter Target="ContactInfoTitle.FontSize" Value="{StaticResource ResponsiveFontSizeMedium}"/>
                                    <Setter Target="RoleInfoTitle.FontSize" Value="{StaticResource ResponsiveFontSizeMedium}"/>
                                    <Setter Target="SystemAccessTitle.FontSize" Value="{StaticResource ResponsiveFontSizeMedium}"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>

                    <!-- Seção de dados pessoais -->
                    <StackPanel x:Name="PersonalInfoPanel" Spacing="16" Margin="0,0,24,24">
                        <TextBlock x:Name="PersonalInfoTitle" Text="Dados Pessoais" Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <Grid x:Name="PersonalInfoGrid" ColumnSpacing="24" RowSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Nome -->
                            <StackPanel Grid.Column="0" Grid.Row="0" Spacing="4">
                                <TextBlock Text="Nome" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock Text="{Binding Name}" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>

                            <!-- E-mail -->
                            <StackPanel Grid.Column="1" Grid.Row="0" Spacing="4">
                                <TextBlock Text="E-mail" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock Text="{Binding Email}" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>

                            <!-- Telefone -->
                            <StackPanel Grid.Column="0" Grid.Row="1" Spacing="4">
                                <TextBlock Text="Telefone" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock Text="{Binding Phone}" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>

                            <!-- Data de Nascimento -->
                            <StackPanel Grid.Column="1" Grid.Row="1" Spacing="4">
                                <TextBlock Text="Data de Nascimento" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock Text="{Binding BirthDate, Converter={StaticResource DateToFormattedStringConverter}}" 
                                           Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>

                            <!-- Documento -->
                            <StackPanel Grid.Column="0" Grid.Row="2" Spacing="4">
                                <TextBlock Text="Documento (CPF/CNPJ)" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock Text="{Binding Document}" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Seção de contato -->
                    <StackPanel x:Name="ContactInfoPanel" Spacing="16" Margin="0,0,24,24">
                        <TextBlock x:Name="ContactInfoTitle" Text="Dados de Contato" Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <Grid x:Name="ContactInfoGrid" ColumnSpacing="24" RowSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Endereço -->
                            <StackPanel Grid.Column="0" Grid.Row="0" Spacing="4">
                                <TextBlock Text="Endereço" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock Text="{Binding Address}" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>

                            <!-- Cidade -->
                            <StackPanel Grid.Column="1" Grid.Row="0" Spacing="4">
                                <TextBlock Text="Cidade" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock Text="{Binding City}" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>

                            <!-- Estado -->
                            <StackPanel Grid.Column="0" Grid.Row="1" Spacing="4">
                                <TextBlock Text="Estado" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock Text="{Binding State}" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>

                            <!-- CEP -->
                            <StackPanel Grid.Column="1" Grid.Row="1" Spacing="4">
                                <TextBlock Text="CEP" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock Text="{Binding ZipCode}" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Seção de cargo/função -->
                    <StackPanel x:Name="RoleInfoPanel" Spacing="16" Margin="0,0,24,24">
                        <TextBlock x:Name="RoleInfoTitle" Text="Dados Funcionais" Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <Grid x:Name="RoleInfoGrid" ColumnSpacing="24" RowSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Cargo -->
                            <StackPanel Grid.Column="0" Grid.Row="0" Spacing="4">
                                <TextBlock Text="Cargo" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Border Width="10" Height="10" CornerRadius="5" Background="{Binding Role, Converter={StaticResource RoleToColorConverter}}"/>
                                    <TextBlock Text="{Binding Role}" Style="{StaticResource BodyTextBlockStyle}"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Função -->
                            <StackPanel Grid.Column="1" Grid.Row="0" Spacing="4">
                                <TextBlock Text="Função" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock Text="{Binding Position}" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>

                            <!-- Código do Funcionário -->
                            <StackPanel Grid.Column="0" Grid.Row="1" Spacing="4">
                                <TextBlock Text="Código do Funcionário" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock Text="{Binding EmployeeCode}" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>

                            <!-- Data de Admissão -->
                            <StackPanel Grid.Column="1" Grid.Row="1" Spacing="4">
                                <TextBlock Text="Data de Admissão" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock Text="{Binding HireDate, Converter={StaticResource DateToFormattedStringConverter}}" 
                                           Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>

                            <!-- Data de Demissão -->
                            <StackPanel Grid.Column="0" Grid.Row="2" Spacing="4">
                                <TextBlock Text="Data de Desligamento" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock Text="{Binding TerminationDate, Converter={StaticResource DateToFormattedStringConverter}}" 
                                           Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Seção de acesso ao sistema -->
                    <StackPanel x:Name="SystemAccessPanel" Spacing="16" Margin="0,0,24,24">
                        <TextBlock x:Name="SystemAccessTitle" Text="Acesso ao Sistema" Style="{StaticResource SubtitleTextBlockStyle}"/>

                        <Grid x:Name="SystemAccessGrid" ColumnSpacing="24" RowSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Nome de Usuário -->
                            <StackPanel Grid.Column="0" Grid.Row="0" Spacing="4">
                                <TextBlock Text="Nome de Usuário" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock Text="{Binding Username}" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>

                            <!-- Status da Conta -->
                            <StackPanel Grid.Column="1" Grid.Row="0" Spacing="4">
                                <TextBlock Text="Status da Conta" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE73E;" 
                                             FontSize="14" 
                                             Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                             Visibility="{Binding IsActive, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    <FontIcon Glyph="&#xE711;" 
                                             FontSize="14" 
                                             Foreground="{ThemeResource SystemFillColorCautionBrush}"
                                             Visibility="{Binding IsActive, Converter={StaticResource BoolToVisibilityInverseConverter}}"/>
                                    <TextBlock Text="{Binding IsActive, Converter={StaticResource BoolToActiveStatusConverter}}" 
                                               Style="{StaticResource BodyTextBlockStyle}"/>

                                    <TextBlock Text=" | " Style="{StaticResource BodyTextBlockStyle}" 
                                               Visibility="{Binding IsLocked, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                    <FontIcon Glyph="&#xE72E;" 
                                             FontSize="14" 
                                             Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                             Visibility="{Binding IsLocked, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    <TextBlock Text="Bloqueado" 
                                               Style="{StaticResource BodyTextBlockStyle}"
                                               Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                               Visibility="{Binding IsLocked, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Último Acesso -->
                            <StackPanel Grid.Column="0" Grid.Row="1" Spacing="4">
                                <TextBlock Text="Último Acesso" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock Text="{Binding LastLoginDate, Converter={StaticResource DateTimeToRelativeTimeConverter}}" 
                                           Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>

                            <!-- Tentativas de Acesso -->
                            <StackPanel Grid.Column="1" Grid.Row="1" Spacing="4" 
                                        Visibility="{Binding IsLocked, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="Tentativas de Login" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock Text="{Binding FailedLoginAttempts}" Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </RelativePanel>
            </ScrollViewer>
        </DataTemplate>

        <!-- Atividade Tab Template (Histórico) -->
        <DataTemplate x:Key="EmployeeActivityTemplate">
            <Grid>
                <TextBlock Text="Histórico de atividade não disponível" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           Style="{StaticResource BodyTextBlockStyle}"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource MediumModeThresholdWidth}"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!-- Configurações para telas grandes -->
                        <Setter Target="TogglePaneButton.Visibility" Value="Collapsed"/>
                        <Setter Target="HeaderTextBlock.Margin" Value="24,16,0,16"/>
                        <Setter Target="HeaderTextBlock.Style" Value="{StaticResource TitleTextBlockStyle}"/>
                        <Setter Target="CountTextBlock.Style" Value="{StaticResource SubtitleTextBlockStyle}"/>
                        <Setter Target="CountTextBlock.Margin" Value="8,0,0,0"/>
                        <Setter Target="CommandBar.Margin" Value="0"/>
                        <Setter Target="SearchBox.Width" Value="300"/>
                        <Setter Target="FilteringPanel.Orientation" Value="Horizontal"/>
                        <Setter Target="FilteringPanel.Spacing" Value="8"/>
                        <Setter Target="FilterBox.Width" Value="150"/>
                        <Setter Target="StatusFilterBox.Width" Value="150"/>
                        <Setter Target="SortingComboBox.Width" Value="150"/>
                        <!-- Configuração de layout -->
                        <Setter Target="LeftPanel.Width" Value="500"/>
                        <Setter Target="RightPanel.Margin" Value="8,0,0,0"/>
                    </VisualState.Setters>
                </VisualState>
                
                <VisualState x:Name="MediumState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource CompactModeThresholdWidth}"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!-- Configurações para telas médias -->
                        <Setter Target="TogglePaneButton.Visibility" Value="Visible"/>
                        <Setter Target="HeaderTextBlock.Margin" Value="16,16,0,16"/>
                        <Setter Target="HeaderTextBlock.Style" Value="{StaticResource SubtitleTextBlockStyle}"/>
                        <Setter Target="CountTextBlock.Style" Value="{StaticResource BodyTextBlockStyle}"/>
                        <Setter Target="CountTextBlock.Margin" Value="8,0,0,0"/>
                        <Setter Target="CommandBar.Margin" Value="0"/>
                        <Setter Target="SearchBox.Width" Value="250"/>
                        <Setter Target="FilteringPanel.Orientation" Value="Horizontal"/>
                        <Setter Target="FilteringPanel.Spacing" Value="8"/>
                        <Setter Target="FilterBox.Width" Value="120"/>
                        <Setter Target="StatusFilterBox.Width" Value="120"/>
                        <Setter Target="SortingComboBox.Width" Value="120"/>
                        <!-- Configuração de layout -->
                        <Setter Target="LeftPanel.Width" Value="400"/>
                        <Setter Target="RightPanel.Margin" Value="8,0,0,0"/>
                    </VisualState.Setters>
                </VisualState>
                
                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!-- Configurações para telas pequenas -->
                        <Setter Target="TogglePaneButton.Visibility" Value="Visible"/>
                        <Setter Target="HeaderTextBlock.Margin" Value="8,8,0,8"/>
                        <Setter Target="HeaderTextBlock.Style" Value="{StaticResource BodyStrongTextBlockStyle}"/>
                        <Setter Target="CountTextBlock.Style" Value="{StaticResource CaptionTextBlockStyle}"/>
                        <Setter Target="CountTextBlock.Margin" Value="4,0,0,0"/>
                        <Setter Target="CommandBar.Margin" Value="0"/>
                        <Setter Target="SearchBox.Width" Value="200"/>
                        <Setter Target="FilteringPanel.Orientation" Value="Vertical"/>
                        <Setter Target="FilteringPanel.Spacing" Value="4"/>
                        <Setter Target="FilterBox.Width" Value="NaN"/>
                        <Setter Target="StatusFilterBox.Width" Value="NaN"/>
                        <Setter Target="SortingComboBox.Width" Value="NaN"/>
                        <!-- Configuração de layout -->
                        <Setter Target="LeftPanel.Width" Value="*"/>
                        <Setter Target="RightPanel.Visibility" Value="Collapsed"/>
                        <Setter Target="LeftPanel.Visibility" Value="{Binding HasSelectedEmployee, Converter={StaticResource BoolToVisibilityInverseConverter}}"/>
                        <Setter Target="RightPanel.Visibility" Value="{Binding HasSelectedEmployee, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <!-- Layout principal com grid de dois painéis -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPanel" Width="500"/>
                <ColumnDefinition x:Name="RightPanel" Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Painel esquerdo (Lista de funcionários) -->
            <Grid Grid.Column="0" Padding="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Cabeçalho com título e controle da quantidade -->
                <Grid Grid.Row="0" Background="{ThemeResource NavigationViewTopPaneBackground}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="TogglePaneButton"
                            Grid.Column="0"
                            Style="{StaticResource DefaultButtonStyle}" 
                            Width="48" Height="48"
                            VerticalAlignment="Stretch"
                            Visibility="Collapsed"
                            Click="TogglePaneButton_Click"
                            ToolTipService.ToolTip="Voltar">
                        <FontIcon Glyph="&#xE72B;" FontSize="16"/>
                    </Button>

                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                Margin="24,16,0,16">
                        <TextBlock x:Name="HeaderTextBlock" 
                                  Text="Funcionários" 
                                  Style="{StaticResource TitleTextBlockStyle}"/>
                        <TextBlock x:Name="CountTextBlock" 
                                  Text="{Binding FilteredEmployees.Count, Converter={StaticResource CountToTextConverter}}" 
                                  Style="{StaticResource SubtitleTextBlockStyle}" 
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                  Margin="8,0,0,0"/>
                    </StackPanel>

                    <CommandBar x:Name="CommandBar" 
                               Grid.Column="2" 
                               Background="Transparent" 
                               DefaultLabelPosition="Collapsed" 
                               HorizontalAlignment="Right" 
                               Margin="0">
                        <AppBarButton Icon="Add" 
                                     Label="Adicionar Funcionário" 
                                     Click="AddEmployee_Click"/>
                        <AppBarButton Icon="Refresh" 
                                     Label="Atualizar" 
                                     Click="RefreshList_Click"/>
                    </CommandBar>
                </Grid>

                <!-- Área de filtros -->
                <Grid Grid.Row="1" Padding="16,8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                
                    <!-- Barra de pesquisa -->
                    <AutoSuggestBox x:Name="SearchBox"
                                    Grid.Row="0" 
                                    PlaceholderText="Buscar funcionário..." 
                                    QueryIcon="Find"
                                    Width="300"
                                    HorizontalAlignment="Left" 
                                    TextChanged="SearchBox_TextChanged"
                                    QuerySubmitted="SearchBox_QuerySubmitted"/>

                    <!-- Filtros (cargo, status, ordenação) -->
                    <Grid Grid.Row="1" Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    
                        <!-- Filtro por cargo -->
                        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,12,0">
                            <TextBlock Text="Cargo" Style="{StaticResource CaptionTextBlockStyle}" Margin="0,0,0,4"/>
                            <ComboBox x:Name="FilterBox" 
                                      Width="150" 
                                      SelectionChanged="FilterBox_SelectionChanged">
                                <ComboBoxItem Content="Todos" Tag="All" IsSelected="True"/>
                                <ComboBoxItem Content="Administrador" Tag="Admin"/>
                                <ComboBoxItem Content="Gerente" Tag="Manager"/>
                                <ComboBoxItem Content="Vendedor" Tag="Salesperson"/>
                                <ComboBoxItem Content="Caixa" Tag="Cashier"/>
                                <ComboBoxItem Content="Estoquista" Tag="Stockist"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Filtro por status -->
                        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="0,0,12,0">
                            <TextBlock Text="Status" Style="{StaticResource CaptionTextBlockStyle}" Margin="0,0,0,4"/>
                            <ComboBox x:Name="StatusFilterBox"
                                      Width="150" 
                                      SelectionChanged="StatusFilterBox_SelectionChanged">
                                <ComboBoxItem Content="Todos" Tag="All" IsSelected="True"/>
                                <ComboBoxItem Content="Ativos" Tag="Active"/>
                                <ComboBoxItem Content="Inativos" Tag="Inactive"/>
                                <ComboBoxItem Content="Bloqueados" Tag="Locked"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Ordenação -->
                        <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Left">
                            <TextBlock Text="Ordenar por" Style="{StaticResource CaptionTextBlockStyle}" Margin="0,0,0,4"/>
                            <ComboBox x:Name="SortingComboBox" 
                                      Width="150" 
                                      SelectionChanged="SortingComboBox_SelectionChanged">
                                <ComboBoxItem Content="Nome (A-Z)" Tag="NameAsc" IsSelected="True"/>
                                <ComboBoxItem Content="Nome (Z-A)" Tag="NameDesc"/>
                                <ComboBoxItem Content="Data de contratação (mais antigo)" Tag="HireDateAsc"/>
                                <ComboBoxItem Content="Data de contratação (mais recente)" Tag="HireDateDesc"/>
                                <ComboBoxItem Content="Cargo (Asc)" Tag="RoleAsc"/>
                                <ComboBoxItem Content="Cargo (Desc)" Tag="RoleDesc"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- Lista de funcionários -->
                <ListView x:Name="EmployeesList" 
                         Grid.Row="2" 
                         ItemsSource="{Binding FilteredEmployees}" 
                         SelectionChanged="EmployeesList_SelectionChanged"
                         ItemTemplate="{StaticResource ResponsiveEmployeeCardTemplate}"
                         SelectionMode="Single" 
                         IsItemClickEnabled="True"
                         Margin="16,0,16,16"
                         Padding="0">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Margin" Value="0,2" />
                        </Style>
                    </ListView.ItemContainerStyle>

                    <!-- Estado vazio -->
                    <ListView.Footer>
                        <Grid Visibility="{Binding HasNoItems, Converter={StaticResource BoolToVisibilityConverter}}" 
                             Height="300">
                            <StackPanel VerticalAlignment="Center" 
                                      HorizontalAlignment="Center" 
                                      Spacing="12">
                                <FontIcon Glyph="&#xE9CE;" 
                                        FontSize="72" 
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                
                                <TextBlock Text="Nenhum funcionário encontrado" 
                                          Style="{StaticResource SubtitleTextBlockStyle}" 
                                          HorizontalAlignment="Center"/>
                                
                                <TextBlock Text="Adicione um novo funcionário ou altere os filtros de busca" 
                                          Style="{StaticResource BodyTextBlockStyle}" 
                                          HorizontalAlignment="Center" 
                                          TextWrapping="WrapWholeWords" 
                                          TextAlignment="Center"/>
                                
                                <Button Content="Adicionar Funcionário" 
                                       Style="{StaticResource AccentButtonStyle}" 
                                       Click="AddEmployee_Click" 
                                       Margin="0,8,0,0"/>
                            </StackPanel>
                        </Grid>
                    </ListView.Footer>
                </ListView>
            </Grid>

            <!-- Painel direito (Detalhes do funcionário) -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Cabeçalho dos detalhes -->
                <Grid Grid.Row="0" 
                     Background="{ThemeResource NavigationViewTopPaneBackground}" 
                     Padding="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" 
                               Orientation="Horizontal" 
                               Spacing="12"
                               Visibility="{Binding HasSelectedEmployee, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Viewbox Width="32" Height="32">
                            <Border Background="{Binding SelectedEmployee.Role, Converter={StaticResource RoleToColorConverter}}" 
                                   Width="32" Height="32" 
                                   CornerRadius="16">
                                <TextBlock Text="{Binding SelectedEmployee.Name, Converter={StaticResource NameToInitialsConverter}}" 
                                          Foreground="White" 
                                          FontWeight="SemiBold" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                            </Border>
                        </Viewbox>

                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{Binding SelectedEmployee.Name}" 
                                      Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <TextBlock Text="{Binding SelectedEmployee.Position}" 
                                     Style="{StaticResource CaptionTextBlockStyle}" 
                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="0" 
                               Orientation="Horizontal" 
                               Spacing="12"
                               Visibility="{Binding HasSelectedEmployee, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                        <FontIcon Glyph="&#xE716;" 
                                 FontSize="24" 
                                 Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="Nenhum funcionário selecionado" 
                                  Style="{StaticResource SubtitleTextBlockStyle}" 
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" 
                               Orientation="Horizontal" 
                               Spacing="8"
                               Visibility="{Binding HasSelectedEmployee, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Button Style="{StaticResource ResponsiveActionButtonStyle}" 
                               Click="EditEmployee_Click" 
                               ToolTipService.ToolTip="Editar Funcionário">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE70F;" FontSize="16"/>
                                <TextBlock Text="Editar" />
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource ResponsiveActionButtonStyle}" 
                               Click="DeleteEmployee_Click" 
                               ToolTipService.ToolTip="Excluir Funcionário">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE74D;" FontSize="16" Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                                <TextBlock Text="Excluir" Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Conteúdo dos detalhes -->
                <Grid Grid.Row="1">
                    <!-- Estado vazio -->
                    <Grid Visibility="{Binding HasSelectedEmployee, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                        <StackPanel VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" 
                                   Spacing="16">
                            <FontIcon Glyph="&#xE77F;" 
                                    FontSize="72" 
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            
                            <TextBlock Text="Selecione um funcionário para visualizar detalhes" 
                                      Style="{StaticResource SubtitleTextBlockStyle}" 
                                      HorizontalAlignment="Center" 
                                      TextAlignment="Center" 
                                      TextWrapping="WrapWholeWords"/>
                        </StackPanel>
                    </Grid>

                    <!-- Detalhes do funcionário -->
                    <ScrollViewer Visibility="{Binding HasSelectedEmployee, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel Margin="16">
                            <!-- Seção de dados pessoais -->
                            <StackPanel>
                                <TextBlock Text="Dados Pessoais" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,12"/>
                                
                                <Grid ColumnSpacing="24" RowSpacing="16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Nome -->
                                    <StackPanel Grid.Column="0" Grid.Row="0" Spacing="4">
                                        <TextBlock Text="Nome" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="{Binding SelectedEmployee.Name}" Style="{StaticResource BodyTextBlockStyle}"/>
                                    </StackPanel>
                                    
                                    <!-- Email -->
                                    <StackPanel Grid.Column="1" Grid.Row="0" Spacing="4">
                                        <TextBlock Text="E-mail" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="{Binding SelectedEmployee.Email}" Style="{StaticResource BodyTextBlockStyle}"/>
                                    </StackPanel>
                                    
                                    <!-- Telefone -->
                                    <StackPanel Grid.Column="0" Grid.Row="1" Spacing="4">
                                        <TextBlock Text="Telefone" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="{Binding SelectedEmployee.Phone}" Style="{StaticResource BodyTextBlockStyle}"/>
                                    </StackPanel>
                                    
                                    <!-- Data de Nascimento -->
                                    <StackPanel Grid.Column="1" Grid.Row="1" Spacing="4">
                                        <TextBlock Text="Data de Nascimento" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="{Binding SelectedEmployee.BirthDate, Converter={StaticResource DateToFormattedStringConverter}}" Style="{StaticResource BodyTextBlockStyle}"/>
                                    </StackPanel>
                                    
                                    <!-- Documento -->
                                    <StackPanel Grid.Column="0" Grid.Row="2" Spacing="4">
                                        <TextBlock Text="Documento (CPF)" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="{Binding SelectedEmployee.Document}" Style="{StaticResource BodyTextBlockStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            
                            <!-- Separador -->
                            <Rectangle Height="1" Fill="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,24,0,24"/>
                            
                            <!-- Seção de dados funcionais -->
                            <StackPanel>
                                <TextBlock Text="Dados Funcionais" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,12"/>
                                
                                <Grid ColumnSpacing="24" RowSpacing="16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Cargo -->
                                    <StackPanel Grid.Column="0" Grid.Row="0" Spacing="4">
                                        <TextBlock Text="Cargo" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <Border Width="10" Height="10" CornerRadius="5" Background="{Binding SelectedEmployee.Role, Converter={StaticResource RoleToColorConverter}}"/>
                                            <TextBlock Text="{Binding SelectedEmployee.Role}" Style="{StaticResource BodyTextBlockStyle}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <!-- Função -->
                                    <StackPanel Grid.Column="1" Grid.Row="0" Spacing="4">
                                        <TextBlock Text="Função" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="{Binding SelectedEmployee.Position}" Style="{StaticResource BodyTextBlockStyle}"/>
                                    </StackPanel>
                                    
                                    <!-- Código -->
                                    <StackPanel Grid.Column="0" Grid.Row="1" Spacing="4">
                                        <TextBlock Text="Código do Funcionário" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="{Binding SelectedEmployee.EmployeeCode}" Style="{StaticResource BodyTextBlockStyle}"/>
                                    </StackPanel>
                                    
                                    <!-- Data de Admissão -->
                                    <StackPanel Grid.Column="1" Grid.Row="1" Spacing="4">
                                        <TextBlock Text="Data de Admissão" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="{Binding SelectedEmployee.HireDate, Converter={StaticResource DateToFormattedStringConverter}}" Style="{StaticResource BodyTextBlockStyle}"/>
                                    </StackPanel>
                                    
                                    <!-- Status da Conta -->
                                    <StackPanel Grid.Column="0" Grid.Row="2" Spacing="4">
                                        <TextBlock Text="Status da Conta" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <Ellipse Width="10" Height="10" Fill="{Binding SelectedEmployee.IsActive, Converter={StaticResource BoolToStatusBrushConverter}}"/>
                                            <TextBlock Text="{Binding SelectedEmployee.IsActive, Converter={StaticResource BoolToActiveStatusConverter}}" Style="{StaticResource BodyTextBlockStyle}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Grid>

        <!-- Indicador de carregamento -->
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" 
             Opacity="0.8" 
             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <ProgressRing IsActive="{Binding IsLoading}" 
                         Width="50" 
                         Height="50"/>
        </Grid>

        <!-- Feature tip inicial -->
        <muxc:TeachingTip x:Name="FeatureTip"
                         Title="Gerenciamento de Funcionários"
                         Subtitle="Gerencie facilmente todos os funcionários da sua empresa nesta página. Use os filtros para encontrar rapidamente quem você procura."
                         PreferredPlacement="Bottom"
                         IsLightDismissEnabled="True"
                         ActionButtonContent="Iniciar"
                         CloseButtonContent="Fechar"
                         Target="{x:Bind HeaderTextBlock}"/>
    </Grid>
</Page>